<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8", style="max-width: 80%; margin: 0 auto; text-align: left;">
      <h1>投稿フォーム編集（仮）</h1>
      <%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
        <h4>画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
        <h4>タイトル</h4>
        <%= f.text_field :title, autofocus: true, style: "width: 70%;" %>
        <h4>内容</h4>
        <%= f.text_area :body, autofocus: true, style: "width: 70%;" %><br>
        <%= f.submit '変更を保存'.html_safe, class: "btn btn-success", style: "font-weight: bold" %>
      <% end %>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>