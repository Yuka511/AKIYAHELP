<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8", style="max-width: 80%; margin: 0 auto; text-align: left;">
      <h3><span style="border: 2px solid black; border-radius: 50px; padding: 5px;">　新規投稿　</h3>
      
      <div class="row">
          <div class="col-12 mb-3">
            <br>
            <br>
              <div class="card">
                        
                  <div>
                    <div style="color: black; display: flex; justify-content: space-between; align-items: center;">
                      <div>
                        <%= link_to(@post.user) do %>
                        　<%= image_tag @post.user.get_profile_image(50, 50), class: "mt-3 rounded-circle" %> <!-- 投稿ユーザー画像 -->
                        <% end %>
                        　<%= @post.user.name %> <!-- ユーザーネーム -->
                      </div>
                    </div>
                  <%= form_with model: @post do |f| %>
                    <hr> <!-- 区切りの横線 -->
                    <h5 style="font-weight: bold; color: black;">　<%= f.text_field :title, placeholder: "タイトルを入力してください", style: "width: 50%;" %></h5>
                    <hr> <!-- 区切りの横線 -->
                    <p style="color: black;">　<%= f.text_area :body, placeholder: "本文を入力してください", style: "width: 70%;" %><br></p>
                    <hr> <!-- 区切りの横線 -->
                    　<strong>画像</strong> <%= f.file_field :image, accept: "image/*" %>
                    <hr> <!-- 区切りの横線 -->
                    <div style="text-align: right; margin-right: 20px;">
                      <%= f.submit '投稿' , class: "btn btn-primary", style: "font-weight: bold" %>
                    </div>
                  <% end %>
                  </div>
                        
              </div>
          </div>
      </div>
      
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>


<style>
  a {
    text-decoration: none;
    color: black; /* リンク特有の青文字もデフォルトの色に戻すために追加 */
  }

  a:hover {
    text-decoration: none; /* カーソルを合わせた際に下線を消す */
  }
  
  .card {
    border: 2px solid black; /* 太い線を設定 */
    padding: 10px; /* カード内の余白を調整 */
  }
</style>