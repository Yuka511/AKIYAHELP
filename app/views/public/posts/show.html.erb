<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8", style="max-width: 80%; margin: 0 auto; text-align: left;">
      <h1>[User]の投稿（仮）</h1>
      <div>
        <%= image_tag @post.get_image, size: "300x300" %>
        <p>
          <%= image_tag post_image.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %> <!-- 投稿ユーザー画像 -->
          <%= post.user.name %> <!-- ユーザーネーム -->
        </p>
        <p>タイトル：<%= @post.title %></p>
        <p>内容：<%= @post.body %></p>
        <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>