<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8">
      <!-- ユーザーの詳細 -->
      <div>
        <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
        <% end %>
      </div>
      
      <!-- ユーザーの投稿一覧 -->
      <%= render 'public/posts/post', posts: @posts %>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>