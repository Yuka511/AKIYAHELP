<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8 text-center">
      <!-- ユーザーの詳細 -->
      <div>
        <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
        <% end %>
      </div>
      
      <!-- ユーザーの投稿一覧 -->
      
      <% @posts.each do |post| %>
      <div>
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image, size: "300x300" %>
        <% end %>
        <p>投稿ユーザー画像：<%= image_tag post.user.get_profile_image(100,100) %></p>
        <p>タイトル：<%= post.title %></p>
        <p>内容：<%= post.body %></p>
        <p>ユーザーネーム：<%= post.user.name %></p>
      </div>
      <% end %>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>