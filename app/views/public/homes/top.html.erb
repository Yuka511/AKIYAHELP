<div class = "container">
  <div class = "row justify-content-center"> <!-- top説明 -->
    <div class = "col-2">
    </div>
    <div class = "col-8 text-center">
      <%= image_tag "空き家トップバナー.jpg", class: "card-img" %>
    </div>
    <div class = "col-2">
    </div>
  </div>
  <div class = "row">
    <div class = "col-2">
    </div>
    <div class = "col-8">
      <h3 style="margin-top: 20px;">新着POST</h3>
    </div>
    <div class = "col-2">
    </div>
  </div>
  <div class = "row"> <!-- 新着post５件 -->
    <div class = "col-2">
    </div>
    <div class = "col-8">
      <% @posts.each do |post| %>
          <div class="row">
              <div class="col-12 mb-3">
                  <div class="card">
                      <div>
                        <p>
                          <%= image_tag post.user.get_profile_image(100,100), class: "mt-3 rounded-circle"; %> <!-- 投稿ユーザー画像 -->
                          <%= post.user.name %> <!-- ユーザーネーム -->
                        </p>
                        <p>タイトル：<%= post.title %></p>
                        <p>内容：<%= post.body %></p>
                        <% if post.image.attached? %> <!-- 画像の添付があった場合のみ、画像を表示させる。画像添付がない場合、何も返さない。 -->
                          <%= image_tag post.get_image, size: "300x300" %>
                        <% end %>
                      </div>
                  </div>
              </div>
          </div>
      <% end %>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>