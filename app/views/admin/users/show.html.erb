<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-2">
    </div>
    <div class = "col-8">
      
      <!-- ユーザーの詳細 -->
      <div style="background-color: lightblue; border: 3px solid black; padding: 10px;">
        <div style="display: flex; justify-content: space-between;">
          <span style="display: inline-block; margin-right: 20px; margin-left: 20px;"><!-- blockして横並びにする -->
            <h4 style="font-weight: bold;">（名前）<%= @user.name %></h4>
          </span>
          <% unless @user.guest_user? %>
            <span style="display: inline-block; margin-right: 20px;"><!-- blockして横並びにする -->
              <%= link_to 'アカウントを削除', @user, method: :delete, data: { confirm: 'アカウントを削除するとデータが完全に削除され、元に戻すことはできません。本当に削除しますか？' }, class: "btn btn-danger", style: "font-weight: bold" %>
            </span>
          <% end %>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="display: inline-block; margin-right: 20px; margin-left: 20px;"><!-- blockして横並びにする -->
            <p style="color: gray;">（フリガナ）<%= @user.name_kana %></p>
          </span>
        </div>
        <div>
          <span style="display: inline-block; margin-left: 20px;"><!-- blockして横並びにする -->
            <%= image_tag @user.get_profile_image(100,100) %><!--プロフィール画像-->
          </span>
          <span style="display: inline-block; margin-left: 20px;"><!-- blockして横並びにする -->
            <p>（メールアドレス）<%= @user.email %></p>
            <p style="color: gray;">（自己紹介）<%= @user.introduction %></p><!--自己紹介-->
          </span>
        </div>
        <hr style="border-top: 2px solid black;"> <!-- 区切りの横線 -->
        <div style="display: flex; justify-content: space-between; align-items: center;">
          <span style="color: black; text-align: center; flex: 1; font-weight: bold;">
            <!--<!%= link_to "Follows" user.followings, user_followings_path(user) %>　<!%= link_to user.followings.count, user_followings_path(user) %>-->フォロー
          </span>
          <span style="border-left: 2px solid black; padding-left: 10px; padding-right: 10px; color: black; text-align: center; flex: 1; font-weight: bold;">
            <!--<!%= link_to "Followers" user.followers, user_followers_path(user) %>　<!%= link_to user.followers.count, user_followers_path(user) %>-->フォロワー
          </span>
        </div>
      </div>
      
      <br>
      <br>
      <% if @posts.present? %><!--POSTが投稿されている場合-->
        <span style="border: 2px solid black; border-radius: 50px; padding: 5px;">　<%= @user.name %>の投稿一覧 <i class="fa-regular fa-file"></i>　</span>
        <div style="margin-top: -35px;"><!--brを狭く-->
          <br>
        </div>
        <!-- ユーザーの投稿一覧 -->
        <%= render 'public/posts/post', posts: @posts, user: @user %>
      <% end %>
    </div>
    <div class = "col-2">
    </div>
  </div>
</div>